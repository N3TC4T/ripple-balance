{
  "name": "Ripple Balance",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Check your xrp balance in browser",
  "homepage_url": "http://github.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Show Balance",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "storage",
    "https://data.ripple.com/*"
  ]
}